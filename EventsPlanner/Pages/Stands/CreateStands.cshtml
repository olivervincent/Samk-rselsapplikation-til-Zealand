@page
@using EventsPlanner.Models
@model EventsPlanner.CreateStandsModel
@{
    ViewData["Title"] = "Create Stands";
}

<div class="text-center mt-5">
    <h1 class="display-5 fw-bold">Create Stand</h1>
    <p class="text-muted">Fill in the details below to add a new stand.</p>
</div>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label for="EventNo" class="form-label">Events</label>
                    <select name="EventNo" id="EventNo" asp-for="EventNo" class="form-select">
                        @foreach (var item in Model.Events)
                        {
                            <option value="@item.EventNo">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="Types" class="form-label">Type</label>
                    <input asp-for="@Model.Stand.Types" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label for="Price" class="form-label">Price</label>
                    <input type="number" asp-for="@Model.Stand.Price" class="form-control" />
                </div>
                <div class="col-12 text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                    <a asp-page="/Stands/GetStands" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>