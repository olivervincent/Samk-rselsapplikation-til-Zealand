@page
@model EventsPlanner.Pages.Bookings.UpdateBookingsModel
@{
    ViewData["Title"] = "Update Booking";
}

<div class="text-center mt-5">
    <h1 class="display-5 fw-bold">Update Booking</h1>
    <p class="text-muted">Modify the details of an existing booking below.</p>
</div>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" class="row g-3">
                <div class="col-md-6">
                    <label for="bookingId" class="form-label">Booking ID</label>
                    <input type="text" id="bookingId" class="form-control" asp-for="Booking.BookingId" readonly />
                </div>
                <div class="col-md-6">
                    <label for="eventNo" class="form-label">Event No</label>
                    <input type="text" id="eventNo" class="form-control" asp-for="Booking.EventNo" readonly />
                </div>

                <div class="col-md-6">
                    <label for="standNo" class="form-label">Stand No</label>
                    <select name="StandNo" id="StandNo" asp-for="StandNo" class="form-select">
                        @foreach (var item in Model.Stands)
                        {
                            <option value="@item.StandNo">@item.StandNo</option>
                        }
                    </select>
                </div>

            


                <div class="col-md-6">
                    <label for="guestNo" class="form-label">Guest No</label>
                    <select name="GuestNo" id="GuestNo" asp-for="GuestNo" class="form-select">
                        @foreach (var item in Model.Guests)
                        {
                            <option value="@item.GuestNo">@item.GuestNo</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="dateFrom" class="form-label">Date From</label>
                    <input type="date" id="dateFrom" class="form-control" asp-for="Booking.DateFrom" />
                </div>
                <div class="col-md-6">
                    <label for="dateTo" class="form-label">Date To</label>
                    <input type="date" id="dateTo" class="form-control" asp-for="Booking.DateTo" />
                </div>
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg">Update Booking</button>
                    <a asp-page="/Bookings/GetBookings" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>