@page "{id}"
@using EventsPlanner.Models
@model EventsPlanner.CreateBookingModel
@{
ViewData["Title"] = "CreateBooking";
}
<html>
<head>
    <title>Create Booking</title>
</head>
<body>
<div>
    <form method="post">
        <div class="form-group">
            <label for="StandsNo">Stands</label>
            <select name="StandsNo" id="StandsNo" asp-for="StandsNo">
                @foreach (var item in Model.Stands)
                {
                    <option value="@item.StandNo">Type: @item.Types, Price: @item.Price</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="StandsNo">Guests</label>
            <select name="GuestsNo" id="GuestsNo" asp-for="GuestsNo">
                @foreach (var item in Model.Guests)
                {
                    <option value="@item.GuestNo">@item.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="StandsNo">Date From</label>
            <input type="date" asp-for="@Model.Booking.DateFrom" class="form-control" />
        </div>
        <div class="form-group">
            <label for="StandsNo">Date To</label>
            <input type="date" asp-for="@Model.Booking.DateTo" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Create" />
        </div>
    </form>

</div>
</body>
</html>